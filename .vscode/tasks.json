{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Clang",
            "type": "shell",
            "command": "clang++",
			"args": [
				"-g",
				"-std=c++17",
				"-stdlib=libc++",
				"--include-directory=${workspaceFolder}/Include/Visualization/",
                "--include-directory=${workspaceFolder}/Include/Simulation/",
				"--include=Source/Visualization/glad.c",
				"/opt/homebrew/Cellar/glfw/3.3.5/lib/libglfw.3.dylib",
				"${workspaceFolder}/Source/*.cpp",
				"-o",
				"${workspaceFolder}/Build/ProductImage.exe"
			],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}